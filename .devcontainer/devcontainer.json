// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// Matches MyPetVenues/Properties/launchSettings.json
	"forwardPorts": [5039, 7053],
	"portsAttributes": {
		"5039": {
			"label": "MyPetVenues (http)",
			"onAutoForward": "openBrowser"
		},
		"7053": {
			"label": "MyPetVenues (https)",
			"protocol": "https",
			"onAutoForward": "silent"
		}
	},

	// Persist NuGet packages across container rebuilds.
	"mounts": [
		"source=nuget-cache,target=/home/vscode/.nuget/packages,type=volume"
	],

	"containerEnv": {
		"DOTNET_CLI_TELEMETRY_OPTOUT": "1",
		"DOTNET_NOLOGO": "1",
		"NUGET_XMLDOC_MODE": "skip",
		"DOTNET_USE_POLLING_FILE_WATCHER": "1"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5000, 5001],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "dotnet restore simkplepetapp.sln",

	// Start the app on container start.
	// Notes:
	// - Uses http to avoid HTTPS dev-cert friction inside containers.
	// - Binds to 0.0.0.0 so forwarded ports work.
	"postStartCommand": "nohup dotnet run --project MyPetVenues/MyPetVenues.csproj --urls http://0.0.0.0:5039 > /tmp/mypetvenues.log 2>&1 &",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"ms-dotnettools.blazorwasm-companion",
				"editorconfig.editorconfig"
			],
			"settings": {
				"dotnet.defaultSolution": "simkplepetapp.sln",
				"files.watcherExclude": {
					"**/bin/**": true,
					"**/obj/**": true
				}
			}
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
